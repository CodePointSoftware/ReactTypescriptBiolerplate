{
    "name": "typescriptreactboilerplate",
    "version": "1.0.0",
    "description": "React Typescript Boilerplate",
    "main": "index.js",
    "jest": {
        "setupFiles": [
            "<rootDir>/test-shim.js",
            "<rootDir>/test-setup.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "<rootDir>/test-preprocessor.js"
        },
        "testMatch": [
            "**/__tests__/*.(ts|tsx|js)"
        ]
    },
    "husky": {
        "hooks": {
            "pre-push": "yarn test --watchAll=false"
        }
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-redux": "^7.2.0",
        "redux": "^4.0.4",
        "redux-observable": "^1.1.0",
        "rxjs": "^6.5.5",
        "typesafe-actions": "^5.1.0",
        "typescript": "^3.8.3"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@types/enzyme": "^3.9.2",
        "@types/jest": "^25.2.1",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.6",
        "@types/react-redux": "^7.1.2",
        "@typescript-eslint/eslint-plugin": "^2.28.0",
        "@typescript-eslint/parser": "^2.28.0",
        "babel-loader": "^8.1.0",
        "copy-webpack-plugin": "^5.0.3",
        "css-loader": "^3.5.2",
        "dotenv-webpack": "^1.7.0",
        "enzyme": "^3.9.0",
        "enzyme-adapter-react-16": "^1.13.1",
        "enzyme-to-json": "^3.4.0",
        "eslint": "^6.8.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react-hooks": "^3.0.0",
        "html-webpack-plugin": "^4.2.0",
        "husky": "^4.2.5",
        "jest": "^25.3.0",
        "mini-css-extract-plugin": "^0.9.0",
        "optimize-css-assets-webpack-plugin": "^5.0.1",
        "prettier": "^2.0.4",
        "react-test-renderer": "^16.13.1",
        "sass-loader": "^8.0.2",
        "source-map-loader": "^0.2.4",
        "terser-webpack-plugin": "^2.3.5",
        "ts-jest": "^25.3.1",
        "ts-loader": "^7.0.0",
        "url-loader": "^4.1.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.2",
        "webpack-dev-middleware": "^3.7.0",
        "webpack-dev-server": "^3.4.1",
        "webpack-hot-middleware": "^2.25.0"
    },
    "scripts": {
        "test": "jest",
        "start": "webpack-dev-server --hot --inline --host 0.0.0.0 --config ./webpack.config.js --mode development",
        "dev:build-js": "webpack --config ./webpack.config.js --mode development",
        "prod:build-js": "webpack --config ./webpack.config.js --mode production",
        "prettier:fix": "./node_modules/.bin/prettier './src/**/*.ts' --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/krzysztofgrowinski/ReactTypescriptBiolerplate.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/krzysztofgrowinski/ReactTypescriptBiolerplate/issues"
    },
    "homepage": "https://github.com/krzysztofgrowinski/ReactTypescriptBiolerplate#readme"
}
